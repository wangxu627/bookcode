<script type="text/javascript">
  function openFile() {
    console.log("AAAAAAAAAAAAAAAAAAAAAAA");
    $("#realUploadBtn").on("change", (event, ...args)=>{
      console.log($("#realUploadBtn").val());

      var formData = new FormData();
      //formData.append("myfile", $("#realUploadBtn"));   
     // {{!-- var name = $("input").val(); --}}
      formData.append("file",$("#realUploadBtn")[0].files[0]);
      formData.append("name","wangxu");
      $.ajax({
          url: "/uploadPic",
          type: "POST",
          data: formData,
          /**
          *必须false才会自动加上正确的Content-Type
          */
          contentType: false,
          /**
          * 必须false才会避开jQuery对 formdata 的默认处理
          * XMLHttpRequest会对 formdata 进行正确的处理
          */
          processData: false,
          success: function (data) {
              if (data.status == "true") {
                  alert("上传成功！");
              }
              if (data.status == "error") {
                  alert(data.msg);
              }
          },
          error: function () {
              alert("上传失败！");
          }
      });
    });
    $("#realUploadBtn").click();
  }

  function postMoment() {
    console.log("BVBBBBBBBBBBBBBBBBBBBB"); 
  }
</script>

